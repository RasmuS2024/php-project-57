<?xml version="1.0"?>
<ruleset name="Custom Standard">
    <description>Проверка стиля кода для Laravel</description>

    <!-- Пути для проверки -->
    <file>public</file>
<!-- 
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>
-->

    <!-- Исключения -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/*</exclude-pattern>

    <!-- Используемый стандарт -->
    <rule ref="PSR12"/>
    <!-- Или для Laravel: -->
    <!-- <rule ref="vendor/laravel/pint-bom/presets/laravel.xml"/> -->

    <!-- Дополнительные настройки -->
    <arg name="colors"/>
    <arg value="p"/>
</ruleset>